<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.williamanderssonber.carcompanion.RegisterRefuel">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/add_refuel_date"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/add_refuel_amount"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Tankningsdatum"
                android:inputType="date"
                android:focusable="false"/>

            <EditText
                android:id="@+id/add_refuel_cost"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/add_refuel_mileage"
                android:layout_below="@+id/add_refuel_date"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/add_refuel_mileage"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_refuel_cost"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/textView9"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/add_refuel_amount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_refuel_cost"
                android:layout_alignBottom="@+id/add_refuel_cost"
                android:layout_alignEnd="@+id/add_refuel_mileage"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_refuel_date"
                android:layout_alignBottom="@+id/add_refuel_date"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:text="Datum:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginTop="18dp"
                android:text="Ny tankning"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignTop="@+id/add_refuel_cost"
                android:layout_marginTop="12dp"
                android:text="Summa: kr"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginStart="37dp"
                android:layout_toEndOf="@+id/add_refuel_cost"
                android:text="Liter:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_refuel_mileage"
                android:layout_alignBottom="@+id/add_refuel_mileage"
                android:layout_alignStart="@+id/textView7"
                android:text="Miltal (km):"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
