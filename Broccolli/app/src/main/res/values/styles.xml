<resources>

    <!-- Base application theme. -->
    <style name="FullscreenTheme" parent="RetroSplash">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="RetroSplash" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="android:titleTextColor">@color/titleTextColor</item>
        <item name="android:navigationBarColor">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
    </style>

    <style name="RetroSplash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RetroSplash.AppBarOverlay" parent="RetroSplash" />

    <style name="RetroSplash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
